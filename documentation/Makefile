ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild prelink

ifeq ($(config),debug)
  TARGETDIR = bin/Debug
  TARGET = $(TARGETDIR)/vendor
  define BUILDCMDS
	@echo Running build commands
	sphinx-build -M html source build
  endef
  define CLEANCMDS
	@echo Running clean commands
	rm -rf build;
  endef
endif

ifeq ($(config),release)
  TARGETDIR = bin/Release
  TARGET = $(TARGETDIR)/vendor
  define BUILDCMDS
	@echo Running build commands
	sphinx-build -M html source build
  endef
  define CLEANCMDS
	@echo Running clean commands
	rm -rf build;
  endef
endif

ifeq ($(config),dist)
  TARGETDIR = bin/Dist
  TARGET = $(TARGETDIR)/vendor
  define BUILDCMDS
	@echo Running build commands
	sphinx-build -M html source build
  endef
  define CLEANCMDS
	@echo Running clean commands
	rm -rf build;
  endef
endif

$(TARGET):
	$(BUILDCMDS)

clean:
	$(CLEANCMDS)
